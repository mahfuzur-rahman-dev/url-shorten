<!-- Modal here -->
<div class="modal fade" id="createWorkFileInputModal" tabindex="-1" aria-labelledby="createWorkFileInputModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="createWorkFileInputModalLabel">Create New Work File</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label for="workFileNameInput" class="form-label">Work File Name</label>
                    <input type="text" class="form-control" id="workFileNameInput" placeholder="Enter work file name" required>
                    <div class="invalid-feedback">
                        Please provide a valid work file name.
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="saveWorkFileButton">Save</button>
            </div>
        </div>
    </div>
