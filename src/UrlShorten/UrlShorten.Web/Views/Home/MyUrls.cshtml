@{
    ViewData["Title"] = "My Urls";
    var userUrls = ViewBag.UserUrls as IEnumerable<Url>;
}

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/2.1.3/css/dataTables.bootstrap5.css" rel="stylesheet">
}

<div class="table-responsive">
    <table id="dataTable" class="table table-striped" style="width:100%">
        <thead>
            <tr class="text-center">
                <th style="width: 15%;">Domain</th>
                <th style="width: 20%;">Short Url</th>
                <th style="width: 65%;">Long Url</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (userUrls != null && userUrls.Any())
                {
                    foreach (var url in userUrls)
                    {
                        <tr>
                            <td>@url.Domain</td>
                            <td>@url.ShortUrl</td>
                            <td>@url.LongUrl</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.1.3/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.1.3/js/dataTables.bootstrap5.js"></script>

    <script>
        $(document).ready(function () {
            let table = new DataTable('#dataTable', {
                "columnDefs": [
                    {
                        "targets": 2, // Index of the LongUrl column
                        "render": function (data, type, row, meta) {
                            if (data.length > 50) {
                                return data.substring(0, 60) + "...";
                            } else {
                                return data;
                            }
                        }
                    }
                ],
                responsive: true
            });
        });
    </script>
}
